{
  "name": "codecloak",
  "displayName": "CodeCloak",
  "description": "Selective code encryption for GitHub",
  "version": "1.0.0",
  "publisher": "your-publisher",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python", 
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:java",
    "onLanguage:cpp",
    "onLanguage:c",
    "onCommand:codecloak.decryptFile",
    "onCommand:codecloak.encryptFile",
    "onCommand:codecloak.smartEncryptFunction",
    "onCommand:codecloak.smartDecryptFunction"
  ],
  "main": "./dist/extension.js",
 
  "contributes": {
    "commands": [
      {
        "command": "codecloak.decryptFile",       
        "title": "CodeCloak: Decrypt File"
      },
      {
        "command": "codecloak.encryptFile",         
        "title": "CodeCloak: Encrypt File"
      },
      {
        "command": "codecloak.smartEncryptFunction",
        "title": "CodeCloak: Smart Encrypt Function Body"
      },
      {
        "command": "codecloak.smartDecryptFunction",
        "title": "CodeCloak: Smart Decrypt Function Body"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codecloak.encryptFile",
          "when": "resourceExtname =~ /\\.(js|ts|py|go|rs|java|c|cpp)$/",
          "group": "codecloak@0"
        },
        {
          "command": "codecloak.decryptFile", 
          "when": "resourceExtname =~ /\\.(js|ts|py|go|rs|java|c|cpp)$/ && resourceScheme == file",
          "group": "codecloak@0"
        },
        {
          "command": "codecloak.smartEncryptFunction",
          "when": "resourceExtname =~ /\\.(js|ts|py|go|rs|java|c|cpp)$/",
          "group": "codecloak@1"
        },
        {
          "command": "codecloak.smartDecryptFunction",
          "when": "resourceExtname =~ /\\.(js|ts|py|go|rs|java|c|cpp)$/",
          "group": "codecloak@2"
        }
      ]
    }
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "typescript": "^5.3.0"
  }
}